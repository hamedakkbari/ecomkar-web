# ===========================================
# EcomKar - Environment Variables Template
# ===========================================
# Copy this file to .env.local and fill in your values
# Never commit .env.local to version control

# ===========================================
# APP CONFIGURATION
# ===========================================
# Your site's base URL (required for SEO, OG tags, sitemap)
NEXT_PUBLIC_SITE_URL=https://ecomkar.com

# Environment (development|production)
NODE_ENV=development

# ===========================================
# ANALYTICS (Choose one provider)
# ===========================================
# Analytics provider: plausible|ga|none
ANALYTICS_PROVIDER=plausible

# For Plausible Analytics
ANALYTICS_DOMAIN=ecomkar.com

# For Google Analytics 4 (if ANALYTICS_PROVIDER=ga)
GA_MEASUREMENT_ID=

# For Microsoft Clarity (optional)
CLARITY_ID=

# ===========================================
# N8N WEBHOOKS (Required for forms)
# ===========================================
# Contact form webhook URL
N8N_WEBHOOK_CONTACT=

# Lead form webhook URL  
N8N_WEBHOOK_LEAD=

# Demo form webhook URL (optional)
N8N_WEBHOOK_DEMO=

# Newsletter signup webhook URL (optional)
N8N_WEBHOOK_NEWSLETTER=

# ===========================================
# PAYMENT GATEWAYS
# ===========================================
# Zarinpal (Iranian payment gateway)
ZARINPAL_MERCHANT_ID=
ZARINPAL_CALLBACK_URL=https://ecomkar.com/api/payments/zarinpal/callback

# Stripe (International payments)
STRIPE_SECRET_KEY=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# ===========================================
# EMAIL PROVIDER (Choose one)
# ===========================================
# Email provider: mailgun|resend|none
MAIL_PROVIDER=mailgun

# Mailgun configuration
MAILGUN_API_KEY=
MAILGUN_DOMAIN=

# Resend configuration (alternative)
RESEND_API_KEY=

# ===========================================
# SUPABASE (Phase 2 - Database)
# ===========================================
# Supabase project URL
NEXT_PUBLIC_SUPABASE_URL=

# Supabase anonymous key
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Supabase service role key (server-side only)
SUPABASE_SERVICE_ROLE_KEY=

# ===========================================
# SEO & INTERNATIONALIZATION
# ===========================================
# Default locale
NEXT_PUBLIC_SITE_LOCALE=fa-IR

# Alternative locale (optional)
NEXT_PUBLIC_SITE_ALT_LOCALE=en-US

# ===========================================
# API INFRASTRUCTURE
# ===========================================
# Rate limiting window in milliseconds
RATE_LIMIT_WINDOW_MS=60000

# Maximum requests per IP per window
RATE_LIMIT_MAX=10

# API timeout in milliseconds
API_TIMEOUT_MS=3500

# Log level: info|warn|error
LOG_LEVEL=info

# ===========================================
# DEVELOPMENT ONLY
# ===========================================
# Enable mock mode for missing webhooks
# MOCK_MODE=true

# Debug mode for detailed logging
# DEBUG=true
